# See LICENSE for more information.

cleanup() {
	af-rmchroot "$CUSTOM_ENV_CI_BUILDS_DIR"
}

case "$1" in
always)
	cleanup
	;;
on-success)
	rc="$(cat "$CUSTOM_ENV_CI_BUILDS_DIR/af/config/rc" 2>/dev/null || :)"
	if [ "$rc" = "0" ]; then
		cleanup
	fi
	;;
esac
