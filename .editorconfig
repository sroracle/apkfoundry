# http://editorconfig.org
root = true

[**]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false
indent_style = space

[**.c]
indent_size = 4
indent_style = tab

[**.py]
indent_size = 4
indent_style = space

[**.tmpl]
indent_size = 1
indent_style = space

[**.rst]
max_line_length = 72

[libexec/*]
indent_size = 4
indent_style = tab
